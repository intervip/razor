<div class="button-container column@(Collapsed ?? false ? " collapsed" : "")">
	<button type="button" @onclick:stopPropagation="true" @onclick="@(args => ButtonClickedEvent.InvokeAsync(args))" disabled="@Disabled" hidden="@Hidden">
		@Text
	</button>
</div>

@code {
	[Parameter]
	public string? Text { get; set; }

	[Parameter]
	public bool? Disabled { get; set; }

	[Parameter]
	public bool? Collapsed { get; set; }

	[Parameter]
	public bool? Hidden { get; set; }

	[Parameter]
	public EventCallback<MouseEventArgs> ButtonClickedEvent { get; set; }
}
