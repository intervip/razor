<div class="sidepanel-container row@(isOpen ? string.Empty : " collapsed")" @onclick:stopPropagation="true">
	<div class="sidepanel-content column">
		@ChildContent
	</div>
</div>

@code {
	private bool isOpen = false;

	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	public void OpenPanel()
	{
		isOpen = true;
	}

	public void ClosePanel()
	{
		isOpen = false;
	}
}
