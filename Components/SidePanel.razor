<div class="sidepanel-container column" @onclick:stopPropagation="true" hidden="@(!isOpen)">
	@ChildContent
</div>

@code {
	private bool isOpen = false;

	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	public void OpenPanel()
	{
		isOpen = true;
	}

	public void ClosePanel()
	{
		isOpen = false;
	}
}
